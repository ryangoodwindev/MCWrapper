  <ItemGroup>
    <PackageReference Include="MCWrapper.CLI" Version="6.0.0" />
    <PackageReference Include="MCWrapper.RPC" Version="7.1.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

</Project>
